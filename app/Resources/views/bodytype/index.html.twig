{% extends 'base.html.twig' %}

{% block body %}
    <div id="index">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Список типов кузова</h1>
                </div>
                <div class="col-md-12">
                    <ul style="list-style-type: none; margin:0 0 20px 0; padding:0;">
                        <li>
                            <a style="display:inline-block; margin-top: 20px;" class="button-top-orders" href="{{ path('bodytype_new') }}"><img width="30px" src="{{ asset('public/images/new-order-top-button/AddOrder.svg') }}"></a>
                        </li>

                    </ul>
                </div>
                <div class="col-md-12">
                    <div class="table-hidden">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col" ><input onclick="event.stopPropagation()" type="checkbox"style="width:17px; height:17px; cursor:pointer;"></th>
                            <th scope="col" >Id</th>
                            <th scope="col" >Название</th>
                            <th scope="col"><img width="30px" src="{{ asset('public/images/detail.svg') }}"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for bodyType in pagination %}
                            <tr onclick='window.location.href="{{ path('bodytype_edit', { 'id': bodyType.id }) }}"'>
                                <td scope="col" ><input onclick="event.stopPropagation()" type="checkbox"style="width:17px; height:17px; cursor:pointer;"></td>
                                <td><a href="{{ path('bodytype_show', { 'id': bodyType.id }) }}">{{ bodyType.id }}</a></td>
                                <td>{{ bodyType.name }}</td>
                                <td width="20%">
                                    <ul style="list-style-type: none; margin:0; padding:0; display:flex; justify-content: center;">
                                   <!--     <li>
                                            <a style="display:block; margin-top: 20px;" class="btn btn-info" href="{{ path('bodytype_show', { 'id': bodyType.id }) }}">Показать</a>
                                        </li>
                                        <li>
                                            <a style="display:block; margin-top: 20px;" class="btn btn-success" href="{{ path('bodytype_edit', { 'id': bodyType.id }) }}">Редактировать</a>
                                        </li> -->
                                        <li>
                                            {% for key, value in delete_form %}
                                                {% if key == bodyType.name %}
                                                    {{ form_start(value) }}
                                                    <input class="btn button-delete" type="submit" value="Удалить" id="btn-delete_{{bodyType.name}}">
                                                    <label class="btn-delete" for="btn-delete_{{bodyType.name}}" style="margin: 0;"><img src="{{ asset('public/images/close.svg') }}" ></label>
                                                    {{ form_end(value) }}
                                                {% endif %}
                                            {% endfor %}
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <span class="delete-all-checkbox">Удалить выделенные</span>
                </div>
                </div>
                <div class="pagination col-md-12">
                    {{ knp_pagination_render(pagination) }}
                </div>

            </div>
        </div>
    </div>

    <script>
        let fixedWidthCol = [];
        let count2 = 0;

        document.querySelectorAll(".table tr th").forEach(function (e) {

            let widthCol = e.offsetWidth;
            fixedWidthCol.push({id: count2++, width: widthCol + "px"});

        });

        let returnWidthCol;

        if (JSON.parse(localStorage.getItem("fixedWidthCol7"))) {

            returnWidthCol = JSON.parse(localStorage.getItem("fixedWidthCol7"));
        } else {

            localStorage.setItem('fixedWidthCol7', JSON.stringify(fixedWidthCol));
            returnWidthCol = JSON.parse(localStorage.getItem('fixedWidthCol7'));
        }


        let colItemWidth = document.querySelectorAll(".table tr th");
        for (let i = 0; i < fixedWidthCol.length; i++) {
            colItemWidth[i].style.width = returnWidthCol[i]['width'];
        }

        document.querySelectorAll(".table tr th").forEach(function (e, id) {
            e.onresize = function () {
                fixedWidthCol[id]['width'] = e.style.width;
                localStorage.setItem('fixedWidthCol7', JSON.stringify(fixedWidthCol));

            }
        })



    </script>

{% endblock %}