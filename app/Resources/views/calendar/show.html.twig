{% extends 'base.html.twig' %}

{% block body %}
    <h1>Calendar</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ calendar.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ calendar.phone }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ calendar.text }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('calendar_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('calendar_edit', { 'id': calendar.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
