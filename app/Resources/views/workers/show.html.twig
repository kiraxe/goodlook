{% extends 'base.html.twig' %}

{% block body %}
    <div id="show">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Сотрудник</h1>
                </div>
                <div class="col-lg-12">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th scope="row">Id</th>
                                <td scope="col">{{ worker.id }}</td>
                            </tr>
                            <tr>
                                <th scope="row">ФИО</th>
                                <td scope="col">{{ worker.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Телефон</th>
                                <td scope="col">{{ worker.phone }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Паспортые данные</th>
                                <td scope="col">{{ worker.passport }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Адрес</th>
                                <td scope="col">{{ worker.address }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Адрес</th>
                                <td scope="col">{{ worker.typeworkers }}</td>
                            </tr>
                            {% for service in service %}
                                <tr>
                                    <th scope="row">Услуга</th>
                                    <td scope="col">
                                        {{ service.services.name }}
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Процент</th>
                                    <td scope="col">
                                        {{ service.percent }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-12">
                    <ul style="list-style-type: none; margin:0; padding:0;">
                        <li>
                            <a style="margin-top: 20px;" class="btn btn-success" href="{{ path('workers_edit', { 'id': worker.id }) }}">Редактировать</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                                <input style="margin-top: 20px;" class="btn btn-danger" type="submit" value="Удалить">
                            {{ form_end(delete_form) }}
                        </li>
                        <li>
                            <a style="margin-top: 20px;" class="btn btn-primary" href="{{ path('workers_index') }}">Назад</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
