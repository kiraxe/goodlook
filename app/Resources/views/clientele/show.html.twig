{% extends 'base.html.twig' %}

{% block body %}
    <div id="show">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Клиент</h1>
                </div>
                <div class="col-lg-12">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td scope="col">{{ clientele.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">ФИО</th>
                            <td scope="col">{{ clientele.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Авто</th>
                            <td scope="col">{{ clientele.avto }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Номер</th>
                            <td scope="col">{{ clientele.number }}</td>
                        </tr>
                        <tr>
                            <th scope="row">vin</th>
                            <td scope="col">{{ clientele.vin }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Телефон</th>
                            <td scope="col">{{ clientele.phone }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Email</th>
                            <td scope="col">{{ clientele.email }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-12">
                    <ul style="list-style-type: none; margin:0; padding:0;">
                        <li>
                            <a style="margin-top: 20px;" class="btn btn-success" href="{{ path('clientele_edit', { 'id': clientele.id }) }}">Редактировать</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <input style="margin-top: 20px;" class="btn btn-danger" type="submit" value="Удалить">
                            {{ form_end(delete_form) }}
                        </li>
                        <li>
                            <a style="margin-top: 20px;" class="btn btn-primary" href="{{ path('clientele_index') }}">Назад</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



