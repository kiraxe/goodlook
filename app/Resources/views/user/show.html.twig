{% extends 'base.html.twig' %}

{% block body %}
    <div id="show">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Пользователь</h1>
                </div>
                <div class="col-lg-12">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td scope="col">{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Логин</th>
                            <td scope="col">{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Почта</th>
                            <td scope="col">{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Активность</th>
                            <td scope="col">{% if user.isActive %}Да{% else %}Нет{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-12">
                    <ul style="list-style-type: none; margin:0; padding:0;">
                        <li>
                            <a style="margin-top: 20px;" class="btn btn-success" href="{{ path('user_edit', { 'id': user.id }) }}">Редактировать</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <input style="margin-top: 20px;" class="btn btn-danger" type="submit" value="Удалить">
                            {{ form_end(delete_form) }}
                        </li>
                        <li>
                            <a style="margin-top: 20px;" class="btn btn-primary" href="{{ path('user_index') }}">Назад</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

