{% extends 'base.html.twig' %}

{% block body %}
    <div id="form">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Редактировать услугу</h1>
                </div>
                <div class="col-md-6">
                    {{ form_start(edit_form) }}
                    <div class="formItem">{{ form_row(edit_form.username) }}</div>
                    <div class="formItem">{{ form_row(edit_form.email) }}</div>
                    <div class="formItem">{{ form_row(edit_form.plainPassword.first) }}</div>
                    <div class="formItem">{{ form_row(edit_form.plainPassword.second) }}</div>
                    <div class="formItem">{{ form_row(edit_form.roles) }}</div>
                    <div class="formItem">{{ form_row(edit_form.isActive) }}</div>

                    <div class="formItem form-button">
                        <ul>
                            <li><input style="margin-top: 20px;" class="btn btn-success" type="submit" value="Сохранить" />
                                {{ form_end(edit_form) }}
                            </li>
                            <li>{{ form_start(delete_form) }}
                                    <input style="margin-top: 20px;" class="btn btn-danger" type="submit" value="Удалить">
                                {{ form_end(delete_form) }}
                            </li>
                            <li>
                                <a style="margin-top: 20px;" class="btn btn-primary" href="{{ path('user_index') }}">Назад</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
